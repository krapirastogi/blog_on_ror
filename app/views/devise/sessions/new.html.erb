<div class="m-2 p-2 container">
  <div class="m-2 p-2 d-flex justify-content-center ">
    <div>
      <h2 class="text-center">Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
        <div class="form-group row mb-2">
          <%= f.label :email, class: "col-sm-2 col-form-label text-right" %>
          <div class="col-sm-10">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter your email" %>
          </div>
        </div>

        <div class="form-group row mb-2">
          <%= f.label :password, class: "col-sm-2 col-form-label text-right" %>
          <div class="col-sm-10">
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Enter your password" %>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group row mb-2">
            <div class="col-sm-4 offset-sm-2">
              <div class="form-check">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, class: "form-check-label" %>
              </div>
            </div>
          </div>
        <% end %>

        <div class="form-group row mb-2">
          <div class="justify-content-center ">
            <%= f.submit "Log in", class: "btn btn-danger offset-sm-2 " %>
          </div>
        </div>
      <% end %>

      <div class="form-group row mb-2">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
